<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HyderabadTask" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Make status bar white -->
        <item name="android:statusBarColor">@android:color/black</item>

        <!-- Optional: Set navigation bar too -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>

        <!-- Force light status bar icons -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>